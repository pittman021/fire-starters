    </div>
      </div>



    <div class="container">
      <div class="section content">
        <div class="has-text-centered">
        <h2>Past Interviews</h2>
        </div>
        <% stories.forEach(function(s) { %>
            <a href="/stories/<%= s.slug %>">

              <div class="starter-card box">
                <div class="columns">
                  <div class="column is-2">
                    <div class="image">
                      <img src="/images/uploads/<%= s.img %>">
                    </div>
                  </div>

                  <div class="column is-10">
                    <div class="">
                        <p class="home-card-title title is-4"><%= s.title %></p>
                        <p class="heading is-3"><%= s.Contact.name %></p>
                        <div class="field is-grouped">
                            <div class="control">
                              <div class="tags has-addons">
                                <span class="tag is-dark">Age</span>
                                <span class="tag is-info"><%= s.Contact.retirement_age %></span>
                              </div>
                            </div>
                            <div class="control">
                              <div class="tags has-addons">
                                <span class="tag is-dark">RE</span>
                                <span class="tag is-info"><%= s.Contact.er_progress %>%</span>
                              </div>
                            </div>
                            <div class="control">
                              <div class="tags has-addons">
                                <span class="tag is-dark">SR</span>
                                <span class="tag is-info"><%= s.Contact.savings_rate %>%</span>
                              </div>
                            </div>
                            <div class="control">
                              <div class="tags has-addons">
                                <span class="tag is-dark">RA</span>
                                <span class="tag is-info">$<%= s.Contact.retirement_amount %>k</span>
                              </div>
                            </div>
                          </div>
                    </div>
                  </div>
                </div>
              </div>

            </a>


          <% }); %>
        </div>
      </div>
    </div>

    <% include ./application/_footer.ejs %>
