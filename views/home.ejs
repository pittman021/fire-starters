    <% include ./application/_header.ejs %>

  <section class="hero is-small is-light is-bold">
    <div class="hero-head">
        <% include ./application/_navbar.ejs %>
    </div>
    <div class="hero-body">
      <div class="container has-text-centered">
  			<h1 class="title is-1">FIRE Stories</h1>
  			<p class="subtitle is-3">
            Get interviews every week with people who acheived early retirement & financial independence
  			</p>
      <div>

        <div id="hero-home-signup">
          <!-- Begin Mailchimp Signup Form -->

          <div id="mc_embed_signup">
            <form action="https://timpittman.us7.list-manage.com/subscribe/post?u=5da9220e0fdafc842defd9112&amp;id=e16ce6c8ed" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
              <div id="mc_embed_signup_scroll">
                <input type="email" value="" name="EMAIL" class="email is-medium" id="mce-EMAIL" placeholder="Email Address" required>
                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_5da9220e0fdafc842defd9112_e16ce6c8ed" tabindex="-1" value=""></div>
                <div class="clear"><input type="submit" value="I want!" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
    <div class="container">
      <div class="section content">
        <div class="has-text-centered">
        <h2>Past Interviews</h2>
        </div>
      <div class="columns is-multiline">
        <% stories.forEach(function(s) { %>
          <div class="column is-4">
            <a href="/stories/<%= s.slug %>">
            <div class="card starter-card">
              <div class="card-image">
                <div class="image is-4by3">
                  <img src="/images/<%= s.img %>">
                </div>
              </div>
              <div class="card-content">
                <p class="title is-5"><%= s.title %></p>
                <p class="subtitle" id="card-subtitle">
                <%= s.contact_name %>
                </p>
            </div>
            </div>
          </a>
          </div>
          <% }); %>
        </div>
      </div>
    </div>

    <% include ./application/_footer.ejs %>
