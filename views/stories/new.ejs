<% include ../application/_header.ejs %>
<% include ../application/_navbar.ejs %>

<div class="container content">

<section class="section columns">

	<div class="column is-12 content-container">
		<h2> Add New Post </h2>

		Story

		<form action="/stories" method="POST">
			<div class="field">
				<div class="control">
					<label class="label">Post Title<label>
					<input class="input" type="text" name="stories[title]" />
				</div>
			</div>


			<div class="field">
				<div class="control">
					<label class="label">Image<label>
						<input class="input" type="text" name="stories[img]" />
				</div>
			</div>
			<div class="field">
				<div class="control">
					<label class="label">Content<label>
						<textarea class="textarea" name="stories[content]" ></textarea>
				</div>
			</div>


			<h3>Contact</h3>

			<div class="field">
				<div class="control">
					<label class="label">Name<label>
						<input class="input" type="text" name="contact[name]" />
				</div>
			</div>

				<div class="control">
					<label class="label">Savings Rate<label>
						<input class="input" type="text" name="contact[savings_rate]" />
				</div>

				<div class="control">
					<label class="label">Retirement Age<label>
						<input class="input" type="text" name="contact[retirement_age]" />
				</div>

				<div class="control">
					<label class="label">withdrawal Rate<label>
						<input class="input" type="text" name="contact[withdrawal_rate]" />
				</div>

				<div class="control">
					<label class="label">Retirement Year<label>
						<input class="input" type="text" name="contact[retirement_year]" />
				</div>

				<div class="control">
					<label class="label">Early Retirement %<label>
						<input class="input" type="text" name="contact[er_progress]" />
				</div>

				<div class="control">
					<label class="label">REtirement Amount<label>
						<input class="input" type="text" name="contact[retirement_amount]" />
				</div>

			<input class="button" type="submit">
		</form>
	</div>
</section>

</div>

