<% include ../application/_header.ejs %>
<% include ../application/_navbar.ejs %>

<div class="container content">

<section class="section columns">

	<div class="column is-12 content-container">
		<h2> Edit Story </h2>

		<h3> Edit Image </h3>
		<form action="/stories/<%= story.id %>/image?_method=PUT" method="POST" enctype="multipart/form-data"  >
			<div class="field">
				<div class="control">
					<label class="label">Image<label>
						<input class="input" type="file" value="<%= story.img %>" name="img" />
				</div>
			</div>
			<input type='submit' class="button">
		</form>

			<h3> Edit Content </h3>
		<form action="/stories/<%= story.id %>?_method=PUT" method="POST" >
			<div class="field">
				<div class="control">
					<label class="label">Post Title<label>
					<input class="input" type="text" name="title" value="<%= story.title %>" />
				</div>
			</div>

			<div class="field">
				<div class="control">
					<label class="label">Contact Name<label>
						<input class="input" type="text" value="<%= story.contact_name %>" name="contact_name" />
				</div>
			</div>

			<div class="field">
				<div class="control">
					<label class="label">Content<label>
						<textarea class="textarea" name="content" ><%= story.content %></textarea>
				</div>
			</div>
			<input class="button" type="submit">
		</form>
	</div>
</section>

</div>

<% include ../application/_footer.ejs %>
